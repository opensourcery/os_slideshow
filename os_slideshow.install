<?php
/**
 * @file
 * Install hooks for the slideshow feature.
 */

/**
 * Implementation of hook_enable().
 */
function os_slideshow_enable() {
  $result = RotatingBanner::getAll();
  if (empty($result)) {
    // No rotating banners exist yet, create one.
    RotatingBanner::create('os_slideshow');
  }
}